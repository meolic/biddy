BIDDYVERSION = `cat ./VERSION`

MKDIR = mkdir -p
CP = cp
RM = rm -f
GCC = gcc
AR = ar

# use 32-bit version of MPIR
#MPIRDLLPATH = "C:/msys64/home/Robert/mpir-mingw32-2.7.2"

# use 64-bit version of MPIR
MPIRDLLPATH = "C:/msys64/home/Robert/mpir-mingw-2.7.2"

LIBGMP = -L$(MPIRDLLPATH)/lib -lmpir

all: dynamic

dynamic:
	@$(MKDIR) $(BINDIR)
	@$(MAKE) lib \
	"BIDDYVERSION = $(BIDDYVERSION)" \
	"LIBNAME = biddy.dll" \
	"LIBGMP = $(LIBGMP)" \
	"CC = $(GCC) $(CFLAGS) -DNDEBUG -O2 -DMINGW -DBUILD_BIDDY" \
	"LN = $(GCC) $(CFLAGS) -shared -Wl,--out-implib,biddy.lib -o"
	@$(CP) $(MPIRDLLPATH)/bin/libmpir-16.dll $(BINDIR)

static:
	@$(MAKE) lib \
	"BIDDYVERSION = $(BIDDYVERSION)" \
	"LIBNAME = libbiddy.a" \
	"LIBGMP =" \
	"CC = $(GCC) $(CFLAGS) -DNDEBUG -O2 -DMINGW" \
	"LN = $(AR) rcs"

debug:
	@$(MAKE) lib \
	"BIDDYVERSION = $(BIDDYVERSION)" \
	"LIBNAME = libbiddy.a" \
	"LIBGMP = " \
	"CC = $(GCC) $(CFLAGS) -g -O0 -DMINGW" \
	"LN = $(AR) rcs"
	@$(CP) $(MPIRDLLPATH)/bin/libmpir-16.dll $(BINDIR)
